<%- include('partials/header') -%>

<h1><%= name %></h1>
<% subTasks.forEach((subTask) => { %>
    <div class="container">
        <form class="container" action="/<%= id %>/deleteSub" method="post">
            <input type="checkbox" name="deleteCheckbox" value="<%= subTask._id %>" onChange="this.form.submit()">
            <p><%= subTask.timeStart %>  --  <%= subTask.timeEnd%> <%= subTask.hrs %>:<%= subTask.min %>:<%= subTask.sec %></p>
        </form>
    </div>
<% }) %>

